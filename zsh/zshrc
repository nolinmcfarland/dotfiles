# neovim
export PATH="$HOME/nvim/bin:/usr/bin:/bin:/usr/sbin:/sbin"
alias vim="nvim"

# Homebrew
export PATH="/opt/homebrew/bin:$PATH"

# Go
export PATH="/usr/local/go/bin:$PATH"

# C
# Helper for running C code
c() {
    if [ -n "$1" ]
    then
        clang "$1" && ./a.out
    else
        echo "Expected .c file as argument"
    fi
}
